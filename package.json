		"@koa/cors": "^2.2.3",
		"ava": "^1.0.1",
		"browser-env": "^3.2.5",
		"concurrently": "^4.1.0",
		"husky": "^1.2.0",
		"koa": "^2.6.2",
		"koa-body": "^4.0.6",
