{
  "name": "karin",
  "version": "0.3.2",
  "description": "",
  "main": "build/node/index.js",
  "browser": "build/browser/index.umd.js",
  "scripts": {
    "test": "ava",
    "preversion": "npm-run-all build:node build:browser test",

    "pretty":
      "prettier --config .prettierrc --write \"test/**/*.js\" \"src/**/*.js\" \"src/**/**/*.js\" \"src/*.js\" \"package.json\" \"tsconfig.json\" ",
    "build":"npm-run-all build:node build:browser",
    "build:node":
      "microbundle build -i src/node/index.js --no-compress --no-sourcemap -f cjs --target node",
    "build:browser":
      "microbundle build -i src/xhr/index.js -o build/browser/index.js --no-compress --no-sourcemap -f umd --target browser --name Karin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaheqelyan/karin.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vaheqelyan/karin/issues"
  },
  "homepage": "https://github.com/vaheqelyan/karin#readme",
  "devDependencies": {
    "@koa/cors": "^2.2.3",
    "ava": "^1.0.1",
    "browser-env": "^3.2.5",
    "husky": "^1.2.0",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "microbundle": "^0.9.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {},
  "ava": {
    "files": ["test/**/*.js"],
    "verbose": true,
    "require": ["./test/helpers/setup-browser-env.js"]
  }
}
